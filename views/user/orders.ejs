<script>
  async function retryPayment(orderId, amount) {
      try {
          const response = await fetch('/create-order', {
              method: 'POST',
              headers: {
                  'Content-Type': 'application/json',
              },
              body: JSON.stringify({
                  amount,
                  currency: 'INR',
                  receipt: orderId,
              }),
          });

          const { success, orderId: razorpayOrderId } = await response.json();
          if (!success) throw new Error('Failed to create order');

          const options = {
              key: '<%- process.env.RAZORPAY_KEY_ID %>',
              amount: amount * 100,
              currency: 'INR',
              name: 'DryDelicious',
              description: 'Retry Payment',
              order_id: razorpayOrderId,
              handler: async function (response) {
                  // Verify payment on the server
                  const verifyResponse = await fetch('/verify-paymenttt', {
                      method: 'POST',
                      headers: {
                          'Content-Type': 'application/json',
                      },
                      body: JSON.stringify(response),
                  });

                  const verifyResult = await verifyResponse.json();
                  if (verifyResult.success) {
                      Swal.fire({
                          icon: 'success',
                          text: 'Payment Successful',
                          toast: true,
                          position: 'top-right',
                          showConfirmButton: false,
                          timerProgressBar: true,
                          timer: 1000
                      });
                      // Optionally refresh the page or update the UI
                      location.reload();
                  } else {
                      Swal.fire({
                          icon: 'error',
                          text: 'Payment Verification Failed',
                          toast: true,
                          position: 'top-right',
                          showConfirmButton: false,
                          timerProgressBar: true,
                          timer: 1000
                      });
                  }
              },
          };

          const rzp = new Razorpay(options);
          rzp.open();
      } catch (error) {
          console.error('Error retrying payment:', error);
          Swal.fire({
              icon: 'error',
              text: 'Error retrying payment',
              toast: true,
              position: 'top-right',
              showConfirmButton: false,
              timerProgressBar: true,
              timer: 1000
          });
      }
  }
</script>
