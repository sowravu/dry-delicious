        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
    
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
    
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
    
        /* Order Items */
        .order-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
        }
    
        .order-item img {
            width: 80px;
            height: 80px;
            border-radius: 10px;
            object-fit: cover;
        }
    
        .order-details {
            flex: 1;
            margin-left: 20px;
        }
    
        .order-details h3 {
            margin: 0 0 5px;
        }
    
        .order-details span {
            font-size: 14px;
            color: #666;
        }
    
        .order-status {
            text-align: right;
        }
    
        .order-status .delivered {
            color: green;
        }
    
        .order-status .pending {
            color: red;
        }
    
        /* Continue Shopping Button */
        .continue-shopping {
            text-align: center;
            margin: 30px 0;
        }
    
        .continue-shopping a {
            padding: 10px 20px;
            background-color: black;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
    
        /* Footer Icons */
        .footer-icons {
            display: flex;
            justify-content: space-around;
            align-items: center;
            background-color: #f9f9f9;
            padding: 20px 0;
        }
    
        .footer-icons div {
            text-align: center;
        }
    
        .footer-icons i {
            font-size: 24px;
            margin-bottom: 10px;
        }
    
        /* Responsive Design */
        @media (max-width: 768px) {
            .order-item {
                flex-direction: column;
                align-items: flex-start;
            }
    
            .order-status {
                text-align: left;
                margin-top: 10px;
            }
    
            .search-bar input[type="text"] {
                width: 80%;
            }
    
            .footer-icons {
                flex-direction: column;
            }
    
            .footer-icons div {
                margin-bottom: 15px;
            }
        }
    
        /* Total Price */
        .total-price {
            text-align: right;
            margin: 20px 0;
            font-size: 18px;
            font-weight: bold;
        }
    
        /* Shipping Address */
        .shipping-address {
            margin: 30px 0;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }
    
        .shipping-address h3 {
            margin-bottom: 10px;
        }
    
        /* Cancel Order Button */
        .cancel-order {
            text-align: right;
            margin-top: 10px;
        }
    
        .cancel-order button {
            padding: 10px 20px;
            background-color: red;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

