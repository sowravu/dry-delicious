        <h1>My Orders</h1>
    
        <!-- Breadcrumb -->
        <div class="breadcrumb">
            <a href="/">Home</a> / <a href="/profile">Profile</a> / Orders
        </div>
    
        <!-- Loop through orders -->
        <% if (orders && orders.length > 0) { %>
            <% orders.forEach(order => { %>
                <!-- Shipping Address -->
                <div class="shipping-address">
                    <h3>Shipping Address</h3>
                    <p>
                        <strong>Full Name:</strong> <%= order.shipping_address.Fullname %><br>
                        <strong>Address:</strong> <%= order.shipping_address.Address %><br>
                        <strong>City:</strong> <%= order.shipping_address.city %><br>
                        <strong>State:</strong> <%= order.shipping_address.State %><br>
                        <strong>Pincode:</strong> <%= order.shipping_address.pinCode %><br>
                        <strong>Country:</strong> <%= order.shipping_address.Country %><br>
                        <strong>Phone:</strong> <%= order.shipping_address.phone %><br>
                        <strong>Type:</strong> <%= order.shipping_address.addressType %>
                    </p>
                </div>
                
                <div class="order-header">
                    <h1>Order Details</h1>
                    <button  class="btn btn-primary download-invoice" onclick="window.location.href='/download-invoice?orderId=<%= order.orderId %>'">Download Invoice</button>

                  </div>
               
                <!-- Loop through items in each order -->
                <% order.items.forEach(item => { %>
                    <div class="order-item">
                        <img src="/uploads/<%= item.image %>" alt="<%= item.name %>">
                        <div class="order-details">
                            <h3><%= item.name %> (<%= item.size %>)</h3>
                            <span>₹<%= item.price %></span>
                            <p>Quantity: <%= item.quantity %></p>
                            <p>Order ID: <%= order.orderId %></p>
                        </div>
                        <div class="order-status">
                            <!-- Dynamically add a class based on the order_status -->
                            <span class="badge 
                                <%= item.order_status.toLowerCase() === 'confirmed' ? 'bg-success' : 
                                    item.order_status.toLowerCase() === 'shipped' ? 'bg-primary' : 
                                    item.order_status.toLowerCase() === 'delivered' ? 'bg-info' : 
                                    'bg-danger' %>">
                                <%= item.order_status %>
                            </span>
                            <div class="cancel-order">
                              <% if (item.order_status.toLowerCase() === 'confirmed' || item.order_status.toLowerCase() === 'shipped') { %>
                                <button onclick="confirmCancel('<%= item._id %>', '<%= item.product %>', '<%= item.size %>', '<%= item.quantity %>')">Cancel Order</button>
                              <% } else if (item.order_status.toLowerCase() === 'delivered') { %>
                                <button onclick="confirmReturn('<%= item._id %>', '<%= item.product %>', '<%= item.size %>', '<%= item.quantity %>')">
                                  Return Order
                              </button>
                              <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
              
                <!-- Total Price -->
                <div class="total-price">
                    <h3>Total Price: ₹<%= order.total_price %></h3>
                    <p>Payment Method: <%= order.payment_method %></p>
                </div>
            <% }) %>
        <% } else { %>
            <p>No orders found.</p>
        <% } %>
    
        <!-- Continue Shopping Button -->
        <div class="continue-shopping">
            <a href="/shop">Continue Shopping</a>
        </div>
    </div>


